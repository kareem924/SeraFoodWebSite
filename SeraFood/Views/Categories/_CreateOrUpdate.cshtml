@model SeraFood.Models.Category


@Html.HiddenFor(p => p.CategoryId)
@Html.HiddenFor(p => p.CategoryImageName)
<div class="form-group">
    <label>Product Name</label>
    @Html.TextBoxFor(p => p.CategoryName, new { @class = "form-control", placeholder = "Enter ProductName" })
</div>
<div class="form-group">
    <label>Product Category</label>
    @Html.DropDownListFor(p => p.BrandId, ViewBag.Brands as SelectList, new { @class = "form-control" })
</div>

<div class="fileinput fileinput-new" data-provides="fileinput" style="margin-left: 360px">
    <div class="fileinput-preview thumbnail" data-trigger="fileinput" style="width: 400px; height: 225px;"></div>
    <div>
        <span class="btn btn-default btn-file" style="width: 319px"><span class="fileinput-new">Select image</span><span class="fileinput-exists">Change</span><input type="file" name="..."></span>
        <a href="#" class="btn btn-default fileinput-exists" data-dismiss="fileinput">Remove</a>
    </div>
</div>

<button type="submit" class="btn btn-success" style="margin-left:50px;width: 850px; ">Submit</button>
@Html.ActionLink("Back to index", "Index", "Categories", new { @class = "btn btn-danger", style = "width:210px" })




