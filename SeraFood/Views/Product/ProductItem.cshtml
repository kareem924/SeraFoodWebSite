    <div class="row">

        <div class="col-lg-4 col-md-4 col-sm-6 pm-column-spacing">

            <div class="pm-woocomm-item-thumb-container">
                <div class="pm-woocomm-item-sale-tag">Sale</div>
                <img src="@Url.Action("Download",new{id=Model.ProductId})" class="img-responsive">
            </div>

        </div>

        <div class="col-lg-8 col-md-8 col-sm-6 pm-column-spacing">
            <p class="pm-woocom-item-title">@Model.ProductName</p>

            <ul id="pm-widget-star-rating-single" class="pm-widget-star-rating">
                <li><i class="fa fa-star"></i></li>
                <li><i class="fa fa-star"></i></li>
                <li><i class="fa fa-star"></i></li>
                <li><i class="fa fa-star"></i></li>
                <li><i class="fa fa-star inactive"></i></li>
            </ul>

            <p class="pm-woocom-item-review">(1 Customer Review)</p>

            <p class="pm-woocom-item-price">&#163; @Model.ProductPrice</p>

            <div class="pm-woocom-item-short-description">
                <p>@Model.ProductDescription </p>
            </div>

            @*<div class="quantity buttons_added">
                <input type="number" size="4" class="input-text qty text" title="Qty" value="1" name="quantity" min="1" step="1">
                <div class="pm-quantity-btns-container">
