
@{
    ViewBag.Title = "Home";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="pm-sub-header-container ApplyJob" data-stellar-background-ratio="0.5" data-stellar-vertical-offset="0">


</div>
<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">
            
            <small style="margin-left: 148px">YOU Face the challenge: join us on the road to success</small>
        </h1>
    </div>
</div>
<div class="container">
    <!-- Columns are always 50% wide, on mobile and desktop -->
    <div class="row">
        <div class="col-md-6 ">
          
                <img class="img-responsive imgJob"  src="/Content/imges/Job1.jpg" alt="">
         
            <a href="@Url.Action("Job", new { jobTitle =1})" class="pm-rounded-submit-btn pm-primary AnJop" id="pm-contact-form-btn" style=" position: absolute; margin-top: -144px; margin-left: 216px;">Apply Now</a>
            <h3>
                <a style="font-size: 30px" href="@Url.Action("Job", new { jobTitle =1})">Available Jobs</a>
            </h3>
     
        </div>
        <div class="col-md-6">
        
            <img class="img-responsive imgJob" src="/Content/imges/Job2.jpg" alt="">
            <a href="@Url.Action("Job", new { jobTitle =2})" class="pm-rounded-submit-btn pm-primary AnJop" id="pm-contact-form-btn1" style=" position: absolute; margin-top: -144px; margin-left: 216px;">Apply Now</a>
            
            <h3>
                <a style="font-size: 30px" href="@Url.Action("Job", new { jobTitle =2})">Featured Jobs</a>
            </h3>
            
        </div>
    </div>
    </div>
<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script>
    $('.imgJob ,.AnJop').mouseenter(function () {
        $(this,'.imgJob').css("opacity", ".5");
     
    })
    $('.imgJob ,.AnJop').mouseleave(function () {
        $(this, '.imgJob').css("opacity", "1");

    })
</script>